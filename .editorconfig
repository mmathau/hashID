root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_size = 2

[*.{md,mdx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab
